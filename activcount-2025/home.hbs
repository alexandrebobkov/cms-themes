{{!< default}}
{{!-- The tag above means: insert everything in this file --}}
{{!-- Home page template into the {body} of the default.hbs template --}}

{{!-- Main --}}

<main class="site-main">
    <header class="feed-header gh-canvas">
        {{#if @custom.feed_title}}
            <div class="feed-header-wrapper">
                <h2 class="feed-header-title">{{@custom.feed_title}}</h2>
            </div>
        {{/if}}
    </header>
    
    <section class="post">        
        {{!-- Featured Post --}}
        {{#is "home"}}

        {{#get "posts" limit="all" filter="tags:home_2025"}}
        {{#foreach posts}}
        {{!--<header class="major">
             <h1>{{title}}</h1> 
        </header>--}}
        <div class="content">
            {{content}}
        </div>
        {{/foreach}}
        {{/get}}
        {{/is}}
    </section>
</main>