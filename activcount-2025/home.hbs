{{!< default}}
{{!-- The tag above means: insert everything in this file --}}
{{!-- Home page template into the {body} of the default.hbs template --}}

{{!-- Main --}}

<main class="site-main">
    {{!-- <header class="feed-header gh-canvas">
        {{#if @custom.feed_title}}
            <div class="feed-header-wrapper">
                <h2 class="feed-header-title">{{@custom.feed_title}}</h2>
            </div>
        {{/if}}
    </header> --}}

    <article class="single-content gh-content gh-canvas">        
        {{!-- Display Posts tagged with home_2025 --}}
        {{#is "home"}}
            
            {{!-- Display home page --}}
            {{#post}}
                {{> "content-home"}}
            {{/post}}

            {{#get "posts" limit="all" filter="tags:home_2025"}}
                {{#foreach posts}}
                    {{content}}
                {{/foreach}}
            {{/get}}
        {{/is}}
        {{!--#page}}
            <h1>{{title}}</h1>
            <div>{{content}}</div>
        {{/page--}}
    </article>
    {{!--#page}}
        <article class="single-content gh-content gh-canvas">
            {{content}}
        </article>
    {{/page--}}

    <div class="post-feed{{#match @custom.feed_layout "!=" "Minimal"}} expanded{{/match}}{{#match @custom.feed_layout "Right thumbnail"}} right-thumbnail{{/match}}{{#match @custom.feed_layout "Text-only"}} text-only{{/match}} gh-feed gh-canvas">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

    {{pagination}}

</main>

